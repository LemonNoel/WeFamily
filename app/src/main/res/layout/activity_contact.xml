<?xml version="1.0" encoding="utf-8"?>
<!--TODO 联系人界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title_contact"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/return_home"
            android:layout_width="@dimen/item_photo_size"
            android:layout_height="match_parent"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="详情"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/save_contact"
            android:layout_width="@dimen/item_photo_size"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/general_margin"
            android:background="@drawable/whiteside_shape_8"
            android:text="保存"
            android:textColor="@color/white"
            android:enabled="false" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_margin"/>

    <android.support.v7.widget.CardView
        android:id="@+id/photo_name_card"
        style="@style/MyContactLarge"
        app:cardBackgroundColor="@color/colorWindowBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contact_photo"
                android:layout_width="@dimen/item_photo_size"
                android:layout_height="@dimen/item_photo_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/general_margin"
                android:src="@drawable/default_portrait"/>

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:background="@null"
                android:textSize="20dp"
                android:editable="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_margin"/>

    <android.support.v7.widget.CardView
        android:id="@+id/label_card"
        style="@style/MyContactSmall"
        app:cardBackgroundColor="@color/colorWindowBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/large_margin"
                android:layout_height="@dimen/large_margin"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:src="@drawable/tag_g"/>

            <EditText
                android:id="@+id/contact_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:background="@null"
                android:textSize="16dp"
                android:editable="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/number_card"
        style="@style/MyContactSmall"
        app:cardBackgroundColor="@color/colorWindowBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/large_margin"
                android:layout_height="@dimen/large_margin"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:src="@drawable/email"/>

            <EditText
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:background="@null"
                android:textSize="16dp"
                android:editable="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/location_card"
        style="@style/MyContactSmall"
        app:cardBackgroundColor="@color/colorWindowBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/large_margin"
                android:layout_height="@dimen/large_margin"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:src="@drawable/favorites_b"/>

            <EditText
                android:id="@+id/contact_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:background="@null"
                android:textSize="16dp"
                android:editable="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/weather_card"
        style="@style/MyContactSmall"
        app:cardBackgroundColor="@color/colorWindowBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/large_margin"
                android:layout_height="@dimen/large_margin"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:src="@drawable/favorites_b"/>

            <EditText
                android:id="@+id/contact_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_margin"
                android:background="@null"
                android:textSize="16dp"
                android:editable="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/send_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发消息"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/green_shape_8"
        android:layout_margin="@dimen/middle_margin"
        android:enabled="false"/>

    <Button
        android:id="@+id/delete_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="@color/red"
        android:background="@drawable/red_shape_8"
        android:layout_margin="@dimen/middle_margin"
        android:enabled="false"/>


</LinearLayout>