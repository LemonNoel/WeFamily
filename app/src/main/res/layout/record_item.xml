<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    android:layout_marginTop="@dimen/middle_margin"
    android:layout_marginLeft="@dimen/middle_margin"
    android:layout_marginRight="@dimen/middle_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/photo_image"
            android:layout_width="@dimen/item_photo_size"
            android:layout_height="@dimen/item_photo_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/general_margin"/>

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photo_image"
            android:layout_marginLeft="@dimen/middle_margin"
            android:layout_alignTop="@id/photo_image"/>

        <TextView
            android:id="@+id/last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photo_image"
            android:layout_below="@id/contact_name"
            android:textSize="11dp"
            android:layout_marginLeft="@dimen/middle_margin"
            android:layout_marginBottom="@dimen/middle_margin"/>

        <TextView
            android:id="@+id/last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/photo_image"
            android:layout_marginRight="@dimen/general_margin"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>