<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_views"
        android:id="@+id/title_views"/>

    <include layout="@layout/bottom_views"
        android:id="@+id/bottom_lines"
        android:visibility="visible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_views"
        android:layout_marginBottom="@dimen/bottom_height"/>

</RelativeLayout>